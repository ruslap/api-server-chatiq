generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  OWNER
  OPERATOR
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  avatar    String?
  googleId  String?  @unique
  role      UserRole @default(OPERATOR)
  createdAt DateTime @default(now())
  
  ownedSites Site[]     @relation("SiteOwner")
  sites      SiteUser[] // Sites where user is operator
  messages   Message[]
}

model Site {
  id        String   @id @default(cuid())
  ownerId   String
  owner     User     @relation("SiteOwner", fields: [ownerId], references: [id])
  name      String
  domain    String
  apiKey    String   @unique @default(cuid())
  createdAt DateTime @default(now())
  
  operators SiteUser[]
  chats     Chat[]
}

model SiteUser {
  siteId String
  site   Site   @relation(fields: [siteId], references: [id])
  userId String
  user   User   @relation(fields: [userId], references: [id])
  
  @@id([siteId, userId])
}

model Chat {
  id        String   @id @default(uuid())
  siteId    String
  site      Site     @relation(fields: [siteId], references: [id])
  visitorId String
  status    String   @default("open")
  createdAt DateTime @default(now())
  
  messages  Message[]
  @@index([siteId])
}

model Message {
  id        String   @id @default(uuid())
  chatId    String
  chat      Chat     @relation(fields: [chatId], references: [id])
  from      String   // visitor | admin
  text      String
  userId    String?  // If from admin
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  
  @@index([chatId])
}
